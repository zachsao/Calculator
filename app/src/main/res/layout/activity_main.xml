<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46sp" android:textColor="@android:color/black" android:id="@+id/result_tv"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.977"/>
    <Button
            android:text="7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/b_8"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/reset" app:layout_constraintBottom_toTopOf="@+id/b_4"
    />
    <Button
            android:text="8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_8"
            app:layout_constraintBottom_toTopOf="@+id/b_5" app:layout_constraintEnd_toStartOf="@+id/b_9"
            app:layout_constraintStart_toEndOf="@+id/b_7"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_9"
            app:layout_constraintBottom_toTopOf="@+id/b_6"
            app:layout_constraintEnd_toStartOf="@+id/multiply"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toEndOf="@+id/b_8"/>
    <Button
            android:text="4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_4"
            app:layout_constraintBottom_toTopOf="@+id/b_1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/b_5" android:layout_marginEnd="8dp"/>
    <Button
            android:text="5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_5"
            app:layout_constraintStart_toEndOf="@+id/b_4"
            app:layout_constraintBottom_toTopOf="@+id/b_2"
            app:layout_constraintEnd_toStartOf="@+id/b_6" android:layout_marginEnd="8dp"/>
    <Button
            android:text="6"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_6"
            app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintBottom_toTopOf="@+id/b_3"
            app:layout_constraintStart_toEndOf="@+id/b_5" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_1"
            app:layout_constraintBottom_toTopOf="@+id/b_0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/b_2" android:layout_marginEnd="8dp"/>
    <Button
            android:text="2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_2" app:layout_constraintEnd_toStartOf="@+id/b_3"
            app:layout_constraintBottom_toTopOf="@+id/b_0"
            app:layout_constraintStart_toEndOf="@+id/b_1"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"/>
    <Button
            android:text="3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_3"
            app:layout_constraintBottom_toTopOf="@+id/b_0"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/b_2" android:layout_marginEnd="32dp"/>
    <Button
            android:text="0"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/b_0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/equals" android:layout_marginEnd="32dp"
    />
    <Button
            android:text="-"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/plus"/>
    <Button
            android:text="+"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            app:layout_constraintBottom_toTopOf="@+id/equals"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="="
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/equals"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="*"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiply" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/minus"
    />
    <Button
            android:text="/"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/divide"
            app:layout_constraintBottom_toTopOf="@+id/multiply" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
    />
    <Button
            android:text="c"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/divide" android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/b_8"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_tv" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/result_tv" android:textSize="46sp"
            app:layout_constraintHorizontal_bias="0.978"/>


</android.support.constraint.ConstraintLayout>